<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<h1>Airline</h1>
<hr />
<h2>Flights:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var flight in Model)
    {
      <li><a href="/flights/@flight.GetId()">@flight.GetName() -- Status @flight.GetStatus()</a></li>
      <form action='/flights/@flight.GetId()/delete' method="post">
            <button class="btn" type="submit">Delete Flight</button>
            </form>
    }
  </ul>
}

<h4><a href="/flights/new">Add a new flight</a></h4>
<h4><a href="/">Return home</a></h4>
