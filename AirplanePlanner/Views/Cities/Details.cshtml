@using AirplanePlanner.Models;
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<h1>Airline</h1>
<h2>City: @Model["selectedCity"].GetDescription()</h2>
<hr />
@if (@Model["cityFlights"].Count != 0)
{
  <h4>This city has these flights:</h4>
    @foreach (Flight flight in @Model["cityFlights"])
    {
      <p>@flight.GetName() -- @flight.GetStatus()</p>

    }
}
<h4>Add a flight to this city:</h4>
<form action='/cities/@Model["selectedCity"].GetId()/flights/new' method='post'>
  <label for='flight-id'>Select a flight</label>
  <select id='flight-id' name='flight-id' type='text'>
    @foreach (var flight in @Model["allFlights"])
    {
      <option value='@flight.GetId()'>@flight.GetName()</option>

    }
  </select>
  <button type='submit'>Add</button>
</form>
  <p><a href="/cities/{cityId}/update">Update Cities</a></p>
<p><a href="/">Return to Main Page.</a></p>
